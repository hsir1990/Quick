<script>
import Api from '../../Common/Js/fetch';
export default {
    private: {
        phone: ''
    },
    youPhone({value}){
        this.phone = value
    },
    login(){
        let _this = this;
        Api.getJson("/aa",{},function(data){
            if(data.code == 200){
                _this.$app.$def.prompt.showToast({ message: _this.phone+'登录成功，并存储了信息!,1.5秒后跳转首页！' });
                _this.$app.$def.storage.set({
                    key: 'auth',
                    phone: _this.phone
                })
                setTimeout(() => {
                    _this.$app.$def.router.push({
                        uri: '/Hsir'
                    })
                },1500)
            }
        })
       
    }
}
</script>

